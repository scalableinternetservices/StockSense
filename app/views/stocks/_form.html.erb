<%= simple_form_for @stock, :html => { :multipart => true } do |f| %>
	<%= select_tag(:industry_id, options_for_select(@industries), :prompt => "Select a sector") %>
  <%= f.file_field :stock_img %>
  <%= f.input :name, label: "Company Name" %>
  <%= f.input :symbol, label: "Stock Symbol" %>
  <%= f.input :description, required: true %>
  <%= f.button :submit, class: "btn-custom2" %>
<% end %>