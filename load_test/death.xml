<sessions>

  <!-- ================================================= -->
  <!--                      SESSION                      -->
  <!--                    login-logout                   -->
  <!-- ================================================= -->
  <!-- 1. set up current user randomly -->
  <!-- 2. login -->
  <!-- 3. log out -->
  <!-- ================================================= -->

  <session name="login-logout" weight="1" type="ts_http">

    <!-- 1. set up current user randomly -->
    <!-- [sample value] - current_user_id: 1 -->
    <setdynvars sourcetype="random_number" start="1" end="500">
      <var name="current_user_id" />
    </setdynvars>

    <!-- repeat step [2,3] 10 times -->
    <for from="1" to="10" incr="1" var="counter">

    <!-- 2. login -->
    <!-- go to users/sign_in page -->
    <!-- [sample value] - authenticity_token: ... -->
    <request>
      <dyn_variable name="authenticity_token" ></dyn_variable> 
      <http url="/users/sign_in" version="1.1" method="GET"></http>
    </request>

    <thinktime value="2" random="true"></thinktime>

    <if var="authenticity_token" neq="">
    <!-- log in using username and password -->
    <!-- [sample value] - login: user_1@gmail.com -->
    <!-- [sample value] - password: 88888888 -->
    <!-- [sample value] - authenticity_token: ... -->
    <!-- [sample value] - remember_me: 0 -->
    <request subst="true">
      <http url="/users/sign_in" method="POST" version="1.1" 
        content_type="application/x-www-form-urlencoded"
        contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;user%5Bemail%5D=user_%%_current_user_id%%%40gmail.com&amp;user%5Bpassword%5D=88888888&amp;user%5Bremember_me%5D=0&amp;commit=Log+in"/>
    </request>

    <thinktime value="2" random="true"></thinktime>

    <!-- 3. log out -->
    <request>
      <http url='/users/sign_out' version='1.1' method='DELETE'></http>
    </request>

    </if>
    </for>

  </session>


     <!-- ================================================= -->
  <!--                      SESSION                      -->
  <!--                   visit-homepage                  -->
  <!-- ================================================= -->
  <!-- 1. visit homepage -->
  <!-- ================================================= -->

  <session name="visit-homepage" weight="10" type="ts_http">
    <!-- repeat step [1] 10 times -->
    <for from="1" to="10" incr="1" var="counter">

    <!-- 1. visit homepage -->
    <request>
      <http url='/' version='1.1' method='GET'></http>
    </request>

    <thinktime value="2" random="true"></thinktime>

    </for>

  </session>



  <!-- ================================================= -->
    <!--                      SESSION                      -->
    <!--                    visit-stocks                   -->
    <!-- ================================================= -->
    <!-- 1. random generate a stock id to visit -->
    <!-- 2. visit a random stock -->
    <!-- ================================================= -->
    <session name="visit-stocks" weight="10" type="ts_http">

      <!-- repeat step [1,2] 10 times -->
      <for from="1" to="10" incr="1" var="counter">

      <!-- 1. random generate a stock id to visit -->
      <!-- [sample value] - random_stock_id: 1 -->
      <setdynvars sourcetype="random_number" start="1" end="100">
        <var name="random_stock_id" />
      </setdynvars>

      <!-- 2. visit a random stock -->
      <!-- [sample value] - url: /recipes/1 -->
      <request subst="true">
        <http url="/stocks/%%_random_stock_id%%" version="1.1" method="GET"></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      </for>

    </session>



    
      <!-- ================================================= -->
  <!--                      SESSION                      -->
  <!--                 Search By Sector                  -->
  <!-- ================================================= -->

    <session name="search-by-sector" weight="5" type="ts_http">
      <request>
          <http url='/stocks?industry=Energy' version='1.1' method='GET'></http>
      </request>
      <request>
          <http url='/stocks?industry=Financials' version='1.1' method='GET'></http>
      </request>
      <request>
          <http url='/stocks?industry=Industrials' version='1.1' method='GET'></http>
      </request>
      <request>
          <http url='/stocks?industry=Materials' version='1.1' method='GET'></http>
      </request>
      <request>
          <http url='/stocks?industry=Utilities' version='1.1' method='GET'></http>
      </request>        
  </session>


        <!-- ================================================= -->
    <!--                      SESSION                      -->
    <!--                 create-delete-recipe              -->
    <!-- ================================================= -->
    <!-- 1. set up current user randomly -->
    <!-- 2. login -->
    <!-- 3. go to recipes/new page -->
    <!-- 4. create a recipe -->
    <!-- 5. redirected to recipe page just created -->
    <!-- 6. delete the recipe just created -->
    <!-- 7. log out -->
    <!-- ================================================= -->

    

    <!-- ================================================= -->
    <!--                      SESSION                      -->
    <!--              create-delete-reviews            -->
    <!-- ================================================= -->
    <!-- 1. set up current user randomly -->
    <!-- 2. login -->
    <!-- 3. random generate a stock id to upload reviews -->
    <!-- 4. go to reviews/new page -->
    <!-- 5. create a review -->
    <!-- 6. redirected to review page just created -->
    <!-- 7. delete the review just created -->
    <!-- 8. log out -->
    <!-- ================================================= -->

    <session name="create-delete-review" weight="1" type="ts_http">

      <!-- 1. set up current user randomly -->
      <!-- [sample value] - current_user_id: 1 -->
      <setdynvars sourcetype="random_number" start="1" end="500">
        <var name="current_user_id" />
      </setdynvars>

      <!-- 2. login -->
      <!-- go to users/sign_in page -->
      <!-- [sample value] - authenticity_token: ... -->
      <request>
        <dyn_variable name="authenticity_token" ></dyn_variable> 
        <http url="/users/sign_in" version="1.1" method="GET"></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <if var="authenticity_token" neq="">

      <!-- log in using username and password -->
      <!-- [sample value] - login: user_1@gmail.com -->
      <!-- [sample value] - password: 88888888 -->
      <!-- [sample value] - authenticity_token: ... -->
      <!-- [sample value] - remember_me: 0 -->
      <request subst="true">
        <http url="/users/sign_in" method="POST" version="1.1" 
          content_type="application/x-www-form-urlencoded"
          contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;user%5Bemail%5D=user_%%_current_user_id%%%40gmail.com&amp;user%5Bpassword%5D=88888888&amp;user%5Bremember_me%5D=0&amp;commit=Log+in"/>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- repeat step [3,4,5,6,7] 10 times -->
      <for from="1" to="10" incr="1" var="counter">

      <!-- 3. random generate a stock id to upload reviews -->
      <setdynvars sourcetype="random_number" start="1" end="100">
        <var name="random_stock_id" />
      </setdynvars>

      <!-- 4. go to review/new page -->
      <!-- [sample value] - authenticity_token: ... -->
      <request  subst="true">
        <dyn_variable name="authenticity_token" ></dyn_variable> 
        <http url="/stocks/%%_random_stock_id%%/reviews/new" version="1.1" method="GET"></http>
      </request>

      <thinktime value="2" random="true"></thinktime>


      <!-- if we got the authenticity_token, do step [5,6,7] -->
      <!-- otherwise, do nothing -->
      <if var="authenticity_token" neq="">

      <!-- 5. create a review -->

      <!-- setting up the review data -->

      <!-- [sample value] - comment: abcdefg.... -->
      <setdynvars sourcetype="random_string" length="11">
        <var name="comment" />
      </setdynvars>

      <!-- [sample value] - nl: CRLF -->
      <setdynvars sourcetype="eval" code='fun({Pid,DynVars})-> [[13, 10]] end.'>
        <var name="nl" />
      </setdynvars>
      
      <!-- [sample value] - rating: 1-5 -->
      <setdynvars sourcetype="random_number" start="1" end="5">
        <var name="rating" />
      </setdynvars>  

      <!-- make the request to the server to create the masterpiece -->
      <!-- [sample value] - created_masterpiece_url: /masterpieces/1001 -->
      <request subst="true">
        <dyn_variable name="created_review_url" re="[Ll]ocation: (http://.*)\r"/>
        <http
          url='/stocks/%%_random_stock_id%%/reviews'
          version='1.1'
          method='POST'
          content_type='application/x-www-form-urlencoded'
          contents='utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;review%5Brating%5D=%%_rating%%&amp;review%5Bcomment%5D=%%_comment%%&amp;commit=Create+Review'>
        </http>
      </request>

      <!-- 6. redirected to review page just created -->

      <if var="created_review_url" neq="">
        <request subst="true">
          <http url="%%_created_review_url%%" version="1.1" method="GET"></http>
        </request>
      </if>

      <!-- <thinktime value="2" random="true"></thinktime> -->

      <!-- 7. delete the review just created -->
<!--       <if var="created_review_url" neq="">
        <request subst="true">
          <http url="%%_created_review_url%%" method="DELETE">
          </http>
        </request>
      </if> -->

      <thinktime value="2" random="true"></thinktime>

      </if>

      </for>

      <!-- 8. log out -->
      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>

    </if>
  </session>



 


  

    
  
</sessions>
